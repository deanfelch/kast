<!DOCTYPE html>
<html>
<head>
  <title>Kast Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      color: #f1f1f1;
      padding: 2rem;
    }
    .table { color: #fff; }
    .table th, .table td { border-color: #444; }
    .table-light {
      background-color: #2a2a2a;
      color: #ccc;
    }
    code {
      font-size: 0.85rem;
      word-break: break-word;
    }
    a.btn { margin-top: 1rem; }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">üéôÔ∏è Kast Admin - Uploads</h1>
    <table class="table table-bordered table-striped">
      <thead class="table-light">
        <tr>
          <th>CID</th>
          <th>Filename</th>
          <th>Uploaded At</th>
          <th>Play</th>
        </tr>
      </thead>
      <tbody>
        <% uploads.forEach(upload => { %>
          <tr>
            <td><code><%= upload.cid %></code></td>
            <td><%= upload.filename %></td>
            <td><%= new Date(upload.uploaded_at).toLocaleString() %></td>
            <td><audio controls src="https://gateway.pinata.cloud/ipfs/<%= upload.cid %>"></audio></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin/logout" class="btn btn-outline-light">Logout</a>
  </div>
</body>
</html>
