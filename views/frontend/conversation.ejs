<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Kast - View Conversation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css" />
<link rel="stylesheet" href="/css/frontend.css" />
</head>
<body class="bg-dark text-light">
  <div class="container py-5">
    <div class="conversation-header">
      <h2 class="mb-0">üéß Conversation <%= conversationId %></h2>
      <h2><a href="/record?conversationId=<%= conversationId %>" class="btn btn-primary">
        ‚ûï New Recording
      </a></h2>
    </div>
    <div class="recording-list">
    <% if (kasts.length === 0) { %>
      <div class="alert alert-secondary text-center">
        No recordings yet. Click ‚ÄúNew Recording‚Äù to add one.
      </div>
    <% } else { %>
        <% kasts.forEach(kast => { %>
        <div class="recording-row d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <div class="mb-2 mb-md-0">
              <strong><%= new Date(kast.uploaded_at).toLocaleDateString() %> @ <%= new Date(kast.uploaded_at).toLocaleTimeString() %></strong> ‚Äî <span class="kast-title" contenteditable="true" data-id="<%= kast.id %>"><%= kast.title || "Untitled Kast" %></span><span class="text-muted ms-2">by <%= kast.username || "Unknown" %></span>
            </div>
            <div>
              <audio controls preload="metadata" class="mt-2 mt-md-0" style="height: 32px; max-width: 300px;">
                <source src="https://gateway.pinata.cloud/ipfs/<%= kast.cid %>" type="audio/webm">
                Your browser does not support the audio tag.
              </audio>
            </div>
          </div>
        <% }) %>
    <% } %>
    </div>
  </div>

  <script>
  document.querySelectorAll(".kast-title").forEach(titleEl => {
    const kastId = titleEl.dataset.id;

    // Save on blur
    titleEl.addEventListener("blur", () => {
      saveTitle(kastId, titleEl.innerText.trim());
    });

    // Save on Enter key
    titleEl.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        e.preventDefault(); // avoid adding newline
        titleEl.blur();     // triggers blur ‚Üí saves
      }
    });
  });

  async function saveTitle(id, newTitle) {
    try {
      const res = await fetch(`/kasts/${id}/title`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ title: newTitle })
      });

      const data = await res.json();
      if (!data.success) {
        alert("‚ö†Ô∏è Failed to update title.");
      }
    } catch (err) {
      console.error("Error saving title:", err);
      alert("‚ùå Could not save title.");
    }
  }
</script>
</body>
</html>