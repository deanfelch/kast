<!DOCTYPE html>
<html>
<head>
  <title>Kast Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css" />
<link rel="stylesheet" href="/css/admin.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="bg-dark text-light">
  <div class="container">
    <h1 class="mb-4">üéôÔ∏è Kast Admin - Uploads</h1>
    <div class="table-responsive">
  <table class="table table-bordered table-striped">
      <thead class="table-light">
  <tr>
    <th>Username</th>
    <th>CID</th>
    <th>Filename</th>
    <th>Uploaded At</th>
    <th>Play</th>
  </tr>
</thead>
<tbody>
  <% uploads.forEach(upload => { %>
    <tr>
      <td><%= upload.username %></td>
      <td><code><%= upload.cid %></code></td>
      <td><%= upload.filename %></td>
      <td><%= new Date(upload.uploaded_at).toLocaleString() %></td>
      <td>
        <audio controls>
          <source src="https://gateway.pinata.cloud/ipfs/<%= upload.cid %>" type="audio/mpeg" />
          Your browser does not support the audio element.
        </audio>
      </td>
    </tr>
  <% }) %>
</tbody>

    </table>
    </div>
    <a href="/admin/logout" class="btn btn-outline-light">Logout</a>
  </div>
</body>
</html>
